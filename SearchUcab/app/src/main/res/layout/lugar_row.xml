<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="6dp"
    tools:context="santed.com.searchucab.Adaptador_buscador">
    <!-- Layout que contendra el diseÃ±o de cada fila en particular de la lista-->

    <!-- Indicamos que el estilo sera de CardView-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FFE8E3E3"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cv">

        <!-- El layout del widget sera Relative y adentro sus atributos-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            >

            <!--Imagen del lugar a buscar-->
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/foto_lugar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />

            <!-- Texto que tendra el nombre del lugar-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="fish name"
                android:id="@+id/primario"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/foto_lugar"
                android:layout_marginLeft="5dp"/>

            <!-- Texto que tendra la descripcion del lugar-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/secundario"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/primario"
                android:layout_toRightOf="@+id/foto_lugar"
                android:textColor="#666"/>

            <!-- Texto que tendra la ubicacion del lugar-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="sd"
                android:id="@+id/terciario"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/secundario"
                android:layout_toRightOf="@+id/foto_lugar"
                android:textColor="#666"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
